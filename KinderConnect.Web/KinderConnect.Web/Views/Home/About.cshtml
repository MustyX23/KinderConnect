@using KinderConnect.Web.ViewModels.Home;

@model AboutViewModel

<div class="container-fluid bg-primary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
        <h3 class="display-3 font-weight-bold text-white">About Us</h3>
        <div class="d-inline-flex text-white">
            <p class="m-0"><a class="text-white" href="">Home</a></p>
            <p class="m-0 px-2">/</p>
            <p class="m-0">About Us</p>
        </div>
    </div>
</div>

<partial name="AboutPartials/_LearnMorePartial" />

<div class="container-fluid pt-5">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5"><span class="px-2">Our Teachers</span></p>
            <h1 class="mb-4">Meet Our Teachers</h1>
        </div>
        <div class="row">
            @foreach (var teacher in Model.Teachers)
            {
                <div class="col-md-6 col-lg-3 text-center team mb-5">
                    <div class="position-relative overflow-hidden mb-4">
                        <a asp-controller="Teacher" asp-action="Details" asp-route-id="@teacher.Id">
                            <img class="img-fluid w-100" src="@teacher.ImageUrl" style="border-radius: 100%;" alt="">
                            <h4>@teacher.FirstName @teacher.LastName</h4>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
