@using KinderConnect.Web.ViewModels.Home;
@model IndexViewModel

<div class="container-fluid pt-5">    
    <div class="container pb-3">
        <div class="text-center pb-2">
            <p class="section-title px-5"><span class="px-2">Things we do</span></p>
            <h1 class="mb-4">Activities</h1>
        </div>
        <div class="row">
            @foreach (var activity in Model.Activities)
            {
                <div class="col-lg-4 col-md-6 pb-1">
                    <div class="d-flex bg-light shadow-sm border-top rounded mb-4" style="padding: 30px;">
                        <i class="flaticon-048-paper-plane h1 font-weight-normal text-primary mb-3"></i>
                        <div class="pl-4">
                            <h4>@activity.Name</h4>
                            <p class="m-0">@activity.Description</p>
                        </div>
                    </div>
                </div>
            }           
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
