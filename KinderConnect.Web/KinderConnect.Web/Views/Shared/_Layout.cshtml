@using KinderConnect.Services.Data.Interfaces;
@using KinderConnect.Web.Infrastructure.Extensions;
@inject ITeacherService TeacherService;

@{
    string userId = User.GetUserId();
    bool isTeacher = await TeacherService.IsTeacherByUserIdAsync(userId);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KinderConnect.Web.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Handlee&family=Nunito&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <partial name="_NotificationsPartial"></partial>
    <header>
        <div class="container-fluid bg-light position-relative shadow">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0 px-lg-5">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bold text-secondary" style="font-size: 50px;">
                    <i class="flaticon-043-teddy-bear"></i>
                    <span class="text-primary">KinderConnect</span>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav font-weight-bold mx-auto py-0">
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller = "Home" asp-action="About">About</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Classroom" asp-action="Index">Classrooms</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Child" asp-action="Index">My Kids</a>
                        @if (isTeacher)
                        {
                            <a class="nav-item nav-link" asp-area="" asp-controller="Teacher" asp-action="MyClassrooms">My Classrooms</a>
                        }
                        
                    </div>
                    <partial name="_LoginPartial" />                   
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container-fluid bg-secondary text-white mt-5 py-5 px-sm-3 px-md-5">
        <div class="row pt-5 justify-content-center align-items-center">
            <div class="col-lg-3 col-md-6 mb-4 text-center">
                <a href="" class="navbar-brand font-weight-bold text-primary mb-2" style="font-size: 40px; line-height: 40px;">
                    <i class="flaticon-043-teddy-bear"></i>
                    <span class="text-white">KinderConnect</span>
                </a>
                <img src="https://www.pikpng.com/pngl/b/545-5456659_kindergarten-kids-png-2-png-image-childhood.png" alt="Childhood Image" class="img-fluid mt-2 mb-4">
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <hr class="border-white" />
                    </div>
                </div>
                <div class="row pt-3">
                    <div class="col-12 text-center">
                        <p class="m-0 text-white">
                            &copy; <a class="text-primary font-weight-bold" href="https://github.com/MustyX23/KinderConnect" target="_blank">KinderConnect</a> | All Rights Reserved @DateTime.Now.Year.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <a href="#" class="btn btn-primary p-3 back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
